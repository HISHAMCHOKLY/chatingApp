<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <title>Document</title>
    <style>
      .chat-part{
        padding-left: 10%;
        padding-right: 10%;
      }
      .r-msg{
        border-radius: 20px 0px 20px 20px;
        border: ridge ;
      }
      .l-msg{
        border-radius: 0px 20px 20px 20px;
        border: ridge ;
      }
      .blankpart{
        height: 10vh;
      }
      .message-part{
        padding-left: 10%;
        padding-right: 10%;

      }
    </style>
</head>
<body onload="loadData()">
    <div class="navbar-part">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/"><%=cUser.username%></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="/">HOME<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/logout">LOG OUT <span class="sr-only">(current)</span></a>
                </li>
              </ul>
            </div>
          </nav>
    </div>

    <div class="chat-part" id="chat-part">
    
    </div>

    <div class="message-part border mb-2 fixed-bottom">
      <form action="/chat/<%=cUser.mobNo%>" method="post">
        <div class="row">
          <div class="col-8"><input type="text" id="message" name="message" style="width: 100%; height: 40px;" oninput="enableBtn()"></div>
          <div class="col-4"><button class="btn btn-success btn-block" id="sbmtbtn" type="submit" disabled >SEND</button></div>
        </div>
      </form>

    </div>

    <div class="blankpart">
      <input type="hidden" name="" id="cuser" value="<%=cUser.mobNo%>">
    </div>
</body>
<script>
  
  function enableBtn() {
    document.getElementById('sbmtbtn').disabled=false
    if(document.getElementById('message').value==""){
      document.getElementById('sbmtbtn').disabled=true
    }
  }
  let curr
  let temp=0
  let cuser=document.getElementById('cuser').value
  let test=document.getElementById('chat-part')
  function loadData(){

      fetch('/chat/'+cuser+'/messages',{  
        method:"GET",
        headers:{
          "Content-type":"application/json; charset=UTF-8"
        }
      })
      .then((resp)=>resp.json())
      .then((data)=>{
        console.log(data.cUser.username)
        curr=data.cUserMes.length
        if(curr>temp){
          test.innerHTML=``
          temp=curr
          data.cUserMes.forEach(t => {
          if(t.sender==data.cUser.mobNo){
            test.innerHTML+=`
            <div class="row mt-3 ">
              <div class="col-8 l-msg mr-auto">
              <p class="h3">${data.cUser.username}</p>
              <p class="h5">${t.message}</p>
              </div>
             </div>
            `
          }else{
            test.innerHTML+=`
            <div class="row mt-3">
              <div class="col-8 r-msg ml-auto">
                <p class="h3">you</p>
                <p class="h5">${t.message}</p>
              </div>
            </div>
            `
          }
          let a=document.getElementById('chat-part').offsetHeight
          window.scrollTo(0,a)
        });

        }

      })
      .catch((e)=>{
        console.error(e)
      })
      .finally(()=>{
        console.log('hello')
        
      })
    }
    setInterval(()=>{
      loadData()
    },3000)
</script>
</html>